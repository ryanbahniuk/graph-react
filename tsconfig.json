{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "lib": ["dom", "dom.iterable", "es2015"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
		"downlevelIteration": true,
    "esModuleInterop": true,
		"jsx": "react",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
